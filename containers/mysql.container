[Unit]
Description=Podman - MySQL service
ConditionPathExists=/var/apps/mysql

[Container]
Image=docker.io/library/mariadb:latest
AutoUpdate=registry
EnvironmentFile=/var/apps/nextcloud.env
PodmanArgs=-p 3306:3306 -v /var/apps/mysql:/var/apps/mysql:Z
StopTimeout=120

[Service]
Restart=always

[Install]
WantedBy=default.target
